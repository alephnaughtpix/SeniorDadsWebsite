= form_for @site_file_type do |f|
  - if @site_file_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site_file_type.errors.count, "error")} prohibited this site_file_type from being saved:"
      %ul
        - @site_file_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
