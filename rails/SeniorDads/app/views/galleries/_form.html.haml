= form_for @gallery do |f|
  - if @gallery.errors.any?
    #error_explanation
      %h2= "#{pluralize(@gallery.errors.count, "error")} prohibited this gallery from being saved:"
      %ul
        - @gallery.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :pictures
    %table<>
      - @gallery.pictures.each do |link|
        %tr<>
          %td<>
            <a href="/links/#{link.id}/edit">#{link.title}</a>
          %td<>
            <a href="/links/#{link.id}/destroy">Delete</a>
    <a href="/links/new">New</a>
  .actions
    = f.submit 'Save'
