  %tbody
    - @members.each do |member|
      %tr
        %td= member.name
        %td= member.title
        %td= member.joined
        %td= member.join_reason
        %td= member.function
        %td= member.first_computer
        %td= member.any_other_comments
        %td= member.gallery
        %td= member.category
        %td= member.order
        %td= link_to 'Show', member
        %td= link_to 'Edit', edit_member_path(member)
        %td= link_to 'Destroy', member, :method => :delete, :data => { :confirm => 'Are you sure?' }

